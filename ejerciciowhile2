// ejerciciowhile2.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
void main ()
{
	float parcial1,parcial2,parcial3,practico,examenfinal,notafinal;
	do
	{
		cout<<"ingresar parcial1:";
		cin>> parcial1;
	}
	while ((parcial1>100 || parcial1<0)&& parcial1!=-99);
	while (parcial1!=-99)
	{
		do
		{
			cout<<"ingrese parcial2:";
			cin>> parcial2;
		}
	while (parcial2>100 || parcial2<0);
	do
	{
		cout<<"ingrese parcial3:";
		cin>> parcial3;
	}
	while(parcial3>100 || parcial3<0);
	do
	{
		cout<<"ingrese practico:";
		cin>> practico;
	}
	while(practico>100 || practico<0);
	do
	{ 
		cout<<"ingrese examenfinal:";
		cin>> examenfinal;
	}
	while(examenfinal>100 || examenfinal<0);

	notafinal=((parcial1+parcial2+parcial3)/3)*0.4+practico*0.2+examenfinal*0.4;
	cout<<"nota final:"<<notafinal;

	do
	{
		cout<<"ingrese parcial1:";
		cin>> parcial1;
	}
	while((parcial1>100 || parcial1<0)&&(parcial1!=-99));
	}
	getch ();

}
