	private: System::Void button1_Click(System::Object^  sender, System::EventArgs^  e) {


int a, b, r;
a = Convert::ToInt16(textBox1->Text);
b = Convert::ToInt16(textBox2->Text);
r = a + b;
textBox3->Text = Convert::ToString(r);
MessageBox::Show("la suma es : " + r,"calculadora");





			 }
private: System::Void button2_Click(System::Object^  sender, System::EventArgs^  e) {



int a, b, r;
a = Convert::ToInt16(textBox1->Text);
b = Convert::ToInt16(textBox2->Text);
r = a - b;
textBox3->Text = Convert::ToString(r);
MessageBox::Show("la resta es : " + r,"calculadora");


		 }
private: System::Void button3_Click(System::Object^  sender, System::EventArgs^  e) {




			 int a, b, r;
a = Convert::ToInt16(textBox1->Text);
b = Convert::ToInt16(textBox2->Text);
r = a * b;
textBox3->Text = Convert::ToString(r);
MessageBox::Show("la multiplicaion es : " + r,"calculadora");

		 }
private: System::Void button4_Click(System::Object^  sender, System::EventArgs^  e) {

			 int a, b, r;
a = Convert::ToInt16(textBox1->Text);
b = Convert::ToInt16(textBox2->Text);
if(b==0){
	MessageBox::Show("error!!!!");
}
r = a / b;
textBox3->Text = Convert::ToString(r);
MessageBox::Show("la divicion es : " + r,"calculadora");

		 }
private: System::Void button5_Click(System::Object^  sender, System::EventArgs^  e) {
			 int a, b, r;
a = Convert::ToInt16(textBox1->Text);
b = Convert::ToInt16(textBox2->Text);
r = (a*b)/100;
textBox3->Text = Convert::ToString(r);
MessageBox::Show("el porcentaje es : " + r,"calculadora");

		 }
